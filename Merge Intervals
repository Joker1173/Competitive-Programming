//TIME COMPLEXITY ==> O(n)
class Solution:
    def merge(self, intervals: List[List[int]]) -> List[List[int]]:
        i=1
        intervals.sort()
        ans=[intervals[0]]
        while(i < len(intervals)):
            if (intervals[i][0] <= ans[-1][1]):
                ans[-1][1]=max(intervals[i][1],ans[-1][1])
                i+=1
            else:
                ans.append(intervals[i])
                i+=1
        return ans
            
